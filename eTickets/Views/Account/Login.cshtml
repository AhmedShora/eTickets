@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h3>Log in to your account</h3>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry - </b>@TempData["Error"]</span>
            </div>

        }
    </div>


    <div class="row">
        <div class="col-md-6 offset-3">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span class="text-danger" asp-validation-for="EmailAddress"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-outline-success float-end" type="submit" value="Log in" />
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Movies">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>