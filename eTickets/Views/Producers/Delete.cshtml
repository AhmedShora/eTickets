@model eTickets.Models.Producer

@{
    ViewData["Title"] = "Delete an Producer";
}


<div class="row col-md-8 offset-2">
    <h1>Delete Confirmation for @Model.FullName ?!</h1>

    <div class="row ">
        <div class="form-group text-center">
            <img class="circle-photo rounded-circle" src="" id="ProfilePicturePreview" asp-append-version="true" />
        </div>
        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" readonly class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProfilePictureUrl" hidden class="control-label"></label>
            <input asp-for="ProfilePictureUrl" readonly hidden class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="control-label"></label>
            <input asp-for="Bio" readonly class="form-control" />
        </div>
        <div class="form-group mt-2">
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger float-end" />
            </form>
            <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var output = document.getElementById("ProfilePicturePreview");
            var photo = "https://localhost:7280/images/" + $('#ProfilePictureUrl').val() + ".jpg";
            output.src = photo;
        });
    </script>
}
