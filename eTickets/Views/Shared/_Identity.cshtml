@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0 " asp-action="Login" asp-controller="Account">
        <i class="bi bi-box-arrow-in-right"></i> Log In
    </a>
    <a class="btn btn-outline-primary my-2 my-sm-0 " asp-action="Register" asp-controller="Account">
        <i class="bi bi-box-arrow-in-right"></i> Sign Up
    </a>
}
else
{
    @*user profile section*@
    <div class="dropdown">
        <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn"
            data-bs-toggle="dropdown" aria-expanded="false">
            @*we can use another way by inject s.13:v.12 *@
            <i class="bi bi-person-badge"></i> Hello @User.Identity.Name

        </button>
        <ul class="dropdown-menu" aria-labelledby="profile-btn">
            <li>
                <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                    <i class="bi bi-list"></i>Orders
                </a>
                @if (User.IsInRole("Admin"))
                {

                    <br />
                    <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                        <i class="bi bi-people"></i>Users
                    </a>
                }
            </li>
        </ul>
    </div>
    <form asp-action="Logout" asp-controller="Account">
        <button class="btn btn-outline-danger" type="submit">Logout</button>
    </form>
}
